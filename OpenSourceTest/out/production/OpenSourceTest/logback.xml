<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <!--日志文件地址-->
        <file>D:/logback.log</file>
        <!--追加模式-->
        <append>true</append>
        <encoder>
            <pattern>%d{MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="file" />
    </root>
</configuration>