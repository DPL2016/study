<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.mapper.AdminMapper">
    <select id="findById" parameterType="int" resultType="com.kaishengit.pojo.Admin">
        SELECT id,name,password,address FROM admin WHERE id = #{id}
    </select>
    <insert id="save" parameterType="com.kaishengit.pojo.Admin">
        INSERT INTO admin(name, password, address) VALUES (#{name},#{password},#{address});
    </insert>
    <update id="update" parameterType="com.kaishengit.pojo.Admin">
        UPDATE admin SET password = #{password},address=#{address} WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM admin WHERE id = #{id}
    </delete>
    <select id="findAll" resultType="com.kaishengit.pojo.Admin">
        SELECT id,name,password,address FROM admin
    </select>
</mapper>